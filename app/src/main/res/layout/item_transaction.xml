<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tvtransactionnumberl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de transacción"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tvoriginaccountl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de cuenta de origen"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/tvtargetaccountl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Número de cuenta destino"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">

                <TextView
                    android:id="@+id/tvhourl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha y hora"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:id="@+id/tvdatel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Fecha" />
                <TextView
                    android:id="@+id/tvamountl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor"
                    android:layout_marginLeft="10dp"
                    />

            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>